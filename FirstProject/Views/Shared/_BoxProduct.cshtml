@model Product


<div class="col-4">
    <div class="card">
        <img src="/images/@(Model.Id).jpg" height="160" width="160" class="card-img-top img-thumbnail" />
        <div class="card-body">

            @{
                if (Model.Name.Length>=34)
                {
                    <h5 class="card-title">@Model.Name.Substring(0,30)....</h5>
                }
                else
                {
                    <h5 class="card-title">@Model.Name</h5>
                }
            }
            <a asp-action="Detail"
               asp-controller="Home"
               asp-route-id="@Model.Id">جزئیات محصول</a>
        </div>

    </div>
</div>