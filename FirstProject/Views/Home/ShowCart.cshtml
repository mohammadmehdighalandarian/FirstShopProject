
@model IEnumerable<CartItem>
@{
    ViewData["Title"] = "سبد خرید";
}

<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>کالا</th>
        <th>تعداد</th>
        <th>قیمت</th>
        <th></th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.GetTotalPrice()</td>
            <td>
                <a asp-action="RemoveCart" asp-controller="Home" asp-route-Id="@item.Item.Id">حذف</a>
            </td>
        </tr>
    }
    </tbody>

</table>
<h5>جمع کل : @ViewBag.Price</h5>

